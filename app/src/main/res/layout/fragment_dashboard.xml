<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Connection Status Bar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardConnection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/ivConnIcon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_robot_rover"
                    app:tint="@color/primary_blue" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/ivConnIcon"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rover Status"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvConnectionStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offline"
                        android:textColor="@color/status_offline"
                        android:textSize="10sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnConnect"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="CONNECT"
                    android:textColor="@color/primary_blue" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Mode Toggle Area -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardConnection"
            app:selectionRequired="true"
            app:singleSelection="true">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManual"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Manual"
                android:textColor="@color/white" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAuto"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Auto"
                android:textColor="@color/white" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Speed Slider Area -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@+id/toggleMode"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvSpeedVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drive Speed: 5"
                    android:textColor="@color/blue_accent"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/seekBarDashSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="9"
                    android:progress="5"
                    android:progressTint="@color/blue_accent"
                    android:thumbTint="@color/primary_blue" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Steering Panel (Stacked for Portrait) -->
        <LinearLayout
            android:id="@+id/layoutSteering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardSpeed">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLeft"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_control_background"
                android:text="◄"
                android:textColor="@color/blue_accent"
                android:textSize="32sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/btn_control_background"
                android:text="►"
                android:textColor="@color/blue_accent"
                android:textSize="32sp" />
        </LinearLayout>

        <!-- Throttle & Stop Panel -->
        <LinearLayout
            android:id="@+id/layoutThrottle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/layoutExtra"
            app:layout_constraintTop_toBottomOf="@+id/layoutSteering">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStop"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/btn_control_background"
                android:text="STOP"
                android:textColor="@color/accent_red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnForward"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/btn_control_background"
                    android:text="▲"
                    android:textColor="@color/blue_accent"
                    android:textSize="32sp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBackward"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/btn_control_background"
                    android:text="▼"
                    android:textColor="@color/blue_accent"
                    android:textSize="32sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Extra Controls Area -->
        <LinearLayout
            android:id="@+id/layoutExtra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutThrottle">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHorn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:backgroundTint="@color/button_orange"
                app:cornerRadius="28dp"
                app:icon="@android:drawable/ic_lock_silent_mode_off"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLights"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/button_yellow_off"
                app:cornerRadius="28dp"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="24dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
