<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard"
    android:padding="16dp">

    <!-- Title and Status - Compact Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMART ROVER"
            android:textColor="@color/blue_accent"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"/>

        <TextView
            android:id="@+id/tvConnectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OFFLINE"
            android:textColor="@color/status_offline"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- LEFT PANEL: STEERING -->
    <LinearLayout
        android:id="@+id/panelSteering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STEERING"
            android:textSize="9sp"
            android:textColor="@color/text_secondary_dark"
            android:layout_marginBottom="6dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLeft"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/btn_control_background"
                    android:text="◄"
                    android:textColor="@color/blue_accent"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEFT"
                    android:textSize="8sp"
                    android:textColor="@color/text_secondary_dark"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRight"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/btn_control_background"
                    android:text="►"
                    android:textColor="@color/blue_accent"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RIGHT"
                    android:textSize="8sp"
                    android:textColor="@color/text_secondary_dark"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- RIGHT PANEL: THROTTLE -->
    <LinearLayout
        android:id="@+id/panelThrottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <!-- STOP Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/btn_stop_selector"
                android:text="STOP"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:minWidth="0dp"
                android:minHeight="0dp" />
        </LinearLayout>

        <!-- Throttle Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THROTTLE"
                android:textSize="9sp"
                android:textColor="@color/text_secondary_dark"
                android:layout_marginBottom="6dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnForward"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/btn_control_background"
                        android:text="▲"
                        android:textColor="@color/blue_accent"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:minWidth="0dp"
                        android:minHeight="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FORWARD"
                        android:textSize="8sp"
                        android:textColor="@color/text_secondary_dark"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnBackward"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/btn_control_background"
                        android:text="▼"
                        android:textColor="@color/blue_accent"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:minWidth="0dp"
                        android:minHeight="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BACKWARD"
                        android:textSize="8sp"
                        android:textColor="@color/text_secondary_dark"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- CENTER PANEL: Controls -->
    <LinearLayout
        android:id="@+id/panelCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/panelSteering"
        app:layout_constraintEnd_toStartOf="@id/panelThrottle"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Auto Mode Status (hidden by default) -->
        <TextView
            android:id="@+id/tvAutoModeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto: Idle"
            android:textColor="@color/text_secondary_dark"
            android:textSize="10sp"
            android:textStyle="italic"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            tools:visibility="visible"/>

        <!-- Extra Controls Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConnect"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="@color/logo_blue"
                android:text="Connect"
                android:textSize="10sp"
                android:textAllCaps="false"
                app:cornerRadius="18dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHorn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@android:drawable/ic_lock_silent_mode_off"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="16dp"
                app:iconTint="@color/white"
                android:backgroundTint="@color/button_orange"
                app:cornerRadius="18dp"
                android:contentDescription="Horn"
                android:layout_marginEnd="6dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLights"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="16dp"
                app:iconTint="@color/white"
                android:backgroundTint="@color/button_yellow_off"
                app:cornerRadius="18dp"
                android:contentDescription="Lights" />
        </LinearLayout>

        <!-- Mode Toggle -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:selectionRequired="true"
            app:singleSelection="true"
            android:layout_marginBottom="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnManual"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingHorizontal="16dp"
                android:text="Manual"
                android:textSize="10sp"
                android:textColor="@color/white"
                app:strokeColor="@color/blue_accent"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAuto"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:paddingHorizontal="16dp"
                android:text="Auto"
                android:textSize="10sp"
                android:textColor="@color/white"
                app:strokeColor="@color/blue_accent"
                app:strokeWidth="2dp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Speed Control - Compact -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPEED: "
                    android:textSize="9sp"
                    android:textColor="@color/text_secondary_dark" />

                <TextView
                    android:id="@+id/tvSpeedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="14sp"
                    android:textColor="@color/blue_accent"
                    android:textStyle="bold" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seekBarSpeed"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:max="9"
                android:progress="5"
                android:progressTint="@color/blue_accent"
                android:thumbTint="@color/logo_blue"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>