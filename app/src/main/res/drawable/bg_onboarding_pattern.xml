<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_dark"/>
        </shape>
    </item>

    <!-- Top Left Circle (Subtle) -->
    <item 
        android:top="-100dp"
        android:left="-100dp">
        <shape android:shape="oval">
            <size android:width="300dp" android:height="300dp"/>
            <solid android:color="@color/blue_pattern_light"/>
        </shape>
    </item>
    
    <!-- Bottom Right Circle (Subtle) -->
    <item 
        android:bottom="-150dp"
        android:right="-80dp">
        <shape android:shape="oval">
            <size android:width="400dp" android:height="400dp"/>
            <solid android:color="@color/blue_pattern_light"/>
        </shape>
    </item>

    <!-- Center Right Small Circle -->
    <item 
        android:top="200dp"
        android:right="-50dp">
        <shape android:shape="oval">
             <size android:width="150dp" android:height="150dp"/>
             <solid android:color="#132035"/> <!-- Slightly darker/different shade -->
        </shape>
    </item>
</layer-list>
