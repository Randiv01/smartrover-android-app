<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State: Glowing Blue -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#4D88FF" />
            <stroke android:width="2dp" android:color="#80FFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Disabled State -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#1AFFFFFF" />
            <stroke android:width="1dp" android:color="#33FFFFFF" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Default State: Dark Translucent with Blue Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A2A47" />
            <stroke android:width="2dp" android:color="#4D88FF" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
