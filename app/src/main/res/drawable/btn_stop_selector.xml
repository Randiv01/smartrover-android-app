<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State: Bright Red Glow -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FF7070" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_red" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default State: Red with glow -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FF5252" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <item android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="#80FFFFFF" />
                    <corners android:radius="19dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
