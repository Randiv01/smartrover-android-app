<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:padding="8dp">

    <!-- Top Connection Status Bar -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardConnection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/ivConnIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_signal"
                app:tint="@color/primary_blue" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/ivConnIcon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvConnStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rover Status"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offline"
                    android:textColor="@color/status_offline"
                    android:textSize="10sp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConnect"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="CONNECT"
                android:textColor="@color/primary_blue" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Control Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardConnection">

        <!-- Left Controls: Steering -->
        <LinearLayout
            android:id="@+id/layoutSteering"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLeft"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_control_background"
                android:text="◄"
                android:textColor="@color/blue_accent"
                android:textSize="28sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/btn_control_background"
                android:text="►"
                android:textColor="@color/blue_accent"
                android:textSize="28sp" />
        </LinearLayout>

        <!-- Center Controls: Mode, Extra, Speed -->
        <LinearLayout
            android:id="@+id/layoutCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/layoutThrottle"
            app:layout_constraintStart_toEndOf="@+id/layoutSteering"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/toggleMode"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                app:selectionRequired="true"
                app:singleSelection="true">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManual"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Manual"
                    android:textSize="10sp"
                    android:textColor="@color/white" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAuto"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Auto"
                    android:textSize="10sp"
                    android:textColor="@color/white" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHorn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/button_orange"
                    app:cornerRadius="20dp"
                    app:icon="@android:drawable/ic_lock_silent_mode_off"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="18dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLights"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/button_yellow_off"
                    app:cornerRadius="20dp"
                    app:icon="@android:drawable/ic_menu_view"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="18dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSpeedVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Speed: 5"
                android:textColor="@color/blue_accent"
                android:textSize="12sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seekBarDashSpeed"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:max="9"
                android:progress="5"
                android:progressTint="@color/blue_accent"
                android:thumbTint="@color/primary_blue" />
        </LinearLayout>

        <!-- Right Controls: Throttle & Stop -->
        <LinearLayout
            android:id="@+id/layoutThrottle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStop"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/btn_control_background"
                android:text="STOP"
                android:textColor="@color/accent_red"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnForward"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_control_background"
                    android:text="▲"
                    android:textColor="@color/blue_accent"
                    android:textSize="24sp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnBackward"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/btn_control_background"
                    android:text="▼"
                    android:textColor="@color/blue_accent"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
